<Window x:Class="MonitoringLifestyle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"     
        xmlns:local="clr-namespace:MonitoringLifestyle"
        xmlns:local1="clr-namespace:MonitoringLifestyle.Views"
        xmlns:local2="clr-namespace:MonitoringLifestyle.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="631" Width="1272" >
    
    <StackPanel Name="stackPanelMain" Orientation="Vertical" >
        <local1:Dashboard x:Name="myDashBoard" HorizontalAlignment="Stretch" Height="100"  VerticalAlignment="Top" />
        <UserControl  Content="{Binding ChildUserControl}" Height="450" Margin="10"/>
    </StackPanel>
</Window>
